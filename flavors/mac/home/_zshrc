if [[ "$TERM_PROGRAM" != "vscode" ]]; then
  export ZSH=$HOME/.oh-my-zsh
  export ZSH_CUSTOM=$HOME/.dotfiles/oh_my_zsh
  export ZSH_THEME="lost"

  plugins=(
    aws
    battery
    docker
    docker-compose
    git
    git-prompt
  )

  # Load OMZ!
  source $ZSH/oh-my-zsh.sh
fi

export GPG_TTY=$(tty)
export EDITOR=vim

export PATH="$PATH:$HOME/.local/bin"

# Load dotfiles
[[ -s "$HOME/.bash_exports" ]] && source "$HOME/.bash_exports"
[[ -s "$HOME/.bash_aliases" ]] && source "$HOME/.bash_aliases"
[[ -s "$HOME/.bash_functions" ]] && source "$HOME/.bash_functions"

# Load go2dir
[[ -s "$HOME/.go2dir/go2dir.sh" ]] && source "$HOME/.go2dir/go2dir.sh"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/opt/homebrew/Caskroom/miniconda/base/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/opt/homebrew/Caskroom/miniconda/base/etc/profile.d/conda.sh" ]; then
        . "/opt/homebrew/Caskroom/miniconda/base/etc/profile.d/conda.sh"
    else
        export PATH="/opt/homebrew/Caskroom/miniconda/base/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

